	publisher = {bioRxiv},
	author = {Lazic, Desanka and Geßner, Cornelia and Liepe, Katharina J. and Lesur-Kupin, Isabelle and Mader, Malte and Blanc-Jolivet, Céline and Gömöry, Dušan and Liesebach, Mirko and González-Martínez, Santiago C. and Fladung, Matthias and Degen, Bernd and Müller, Niels A.},
	month = jun,
	year = {2024},
	note = {Pages: 2023.05.11.540382
Section: New Results},
	file = {Full Text PDF:/home/christ/Zotero/storage/FMQE85HZ/Lazic et al. - 2024 - Genomic variation of a keystone forest tree specie.pdf:application/pdf},
}

@article{zwaenepoel_genetic_2024,
	title = {The genetic architecture of polygenic local adaptation and its role in shaping barriers to gene flow},
	issn = {1943-2631},
	url = {https://doi.org/10.1093/genetics/iyae140},
	doi = {10.1093/genetics/iyae140},
	abstract = {We consider how the genetic architecture underlying locally adaptive traits determines the strength of a barrier to gene flow in a mainland-island model. Assuming a general life cycle, we derive an expression for the effective migration rate when local adaptation is due to genetic variation at many loci under directional selection on the island, allowing for arbitrary fitness and dominance effects across loci. We show how the effective migration rate can be combined with classical single-locus diffusion theory to accurately predict multilocus differentiation between the mainland and island at migration–selection–drift equilibrium and determine the migration rate beyond which local adaptation collapses, while accounting for genetic drift and weak linkage. Using our efficient numerical tools, we then present a detailed study of the effects of dominance on barriers to gene flow, showing that when total selection is sufficiently strong, more recessive local adaptation generates stronger barriers to gene flow. We then study how heterogeneous genetic architectures of local adaptation affect barriers to gene flow, characterizing adaptive differentiation at migration–selection balance for different distributions of fitness effects. We find that a more heterogeneous genetic architecture generally yields a stronger genome-wide barrier to gene flow and that the detailed genetic architecture underlying locally adaptive traits can have an important effect on observable differentiation when divergence is not too large. Lastly, we study the limits of our approach as loci become more tightly linked, showing that our predictions remain accurate over a large biologically relevant domain.},
	urldate = {2024-11-04},
	journal = {Genetics},
	author = {Zwaenepoel, Arthur and Sachdeva, Himani and Fraïsse, Christelle},
	month = aug,
	year = {2024},
	pages = {iyae140},
	file = {Full Text PDF:/home/christ/Zotero/storage/884TZNWN/Zwaenepoel et al. - 2024 - The genetic architecture of polygenic local adapta.pdf:application/pdf;Snapshot:/home/christ/Zotero/storage/AHBRH4BD/7738845.html:text/html},
}

@article{bautista_local_2024,
